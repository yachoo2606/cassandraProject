<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/application.log</file>
        <maxFileSize>50GB</maxFileSize>
        <append>false</append>
        <encoder>
            <pattern>%date{"yyyy-MM-dd'T'HH:mm:ss.SSSSSS"} [%thread] %-5level %logger{36} - %msg%nopex%n</pattern>
        </encoder>
    </appender>
    <!-- Second appender for console logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{"yyyy-MM-dd'T'HH:mm:ss.SSSSSS"} [%thread] %highlight(%-5level) %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/> <!-- Reference the console appender here -->
    </root>
</configuration>
